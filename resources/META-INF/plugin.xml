<idea-plugin>
    <id>julis.wang.nocodeshape</id>
    <name>NoCodeShape</name>
    <version>1111.1</version>

    <vendor email="julis.wang@beibei.com.com" url="http://www.julis.wang">VomPom</vendor>

    <description>A plugin to simplify shape com,just to save you time</description>

    <change-notes>A plugin to simplify shape com,just to save you time
    </change-notes>

    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.platform</depends>

    <idea-version since-build="173.0"/>
    <extensions defaultExtensionNs="com.intellij">
    </extensions>

    <actions>
        <action id="NoCodeShapeAction" class="julis.wang.NoCodeShapeAction" text="NoCodeShape" description="NoCodeShape">
            <add-to-group group-id="XmlGenerateToolsGroup" anchor="before" relative-to-action="GenerateDTD"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl q"/>

        </action>
    </actions>
</idea-plugin>