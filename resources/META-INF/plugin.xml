<idea-plugin>
    <id>julis.wang.nocodeshape</id>
    <name>NoCodeShape</name>
    <version>0.1</version>

    <vendor email="julis617669559@gmail.com" url="https://julis.wang">VomPom</vendor>

    <description>A plugin to simplify shape com,just to save you time</description>

    <change-notes>
        V.10
        1、界面操作生成shape代码，现在支持 Solid、Corners、Stroke、Gradient

        2、对于Color属性支持颜色选择器

        3、对于数量单位支持下拉选择
    </change-notes>

    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.platform</depends>

    <idea-version since-build="173.0"/>
    <extensions defaultExtensionNs="com.intellij">
    </extensions>

    <actions>
        <action id="NoCodeShapeAction" class="julis.wang.NoCodeShapeAction" text="NoCodeShape" description="NoCodeShape">
            <add-to-group group-id="XmlGenerateToolsGroup" anchor="before" relative-to-action="GenerateDTD"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl u"/>

        </action>
    </actions>
</idea-plugin>